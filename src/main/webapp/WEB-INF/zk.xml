	</library-property>
	<library-property>
		<name>org.zkoss.zul.Panel.mold</name>
		<value>bs</value>
	</library-property>

	<!-- ckeditor -->
    <language-config>
        <addon-uri>/META-INF/ckez-bind-addon.xml</addon-uri>
        <addon-uri>/META-INF/ace-editor-addon.xml</addon-uri>
        <addon-uri>/META-INF/soundmanager-addon.xml</addon-uri>
    </language-config>
</zk>
